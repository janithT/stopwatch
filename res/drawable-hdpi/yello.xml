<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#efed44" />
      <stroke
          android:width="1dp"
          android:color="#848527" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#efed44"
          android:endColor="#848527"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#848527" />
      <corners
          android:radius="10dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
    

</selector>
